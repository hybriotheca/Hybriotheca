@model Hybriotheca.Web.Models.Account.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="POST">
            
            <div asp-validation-summary="ModelOnly"></div>

            <!-- Old Password -->
            <div class="mb-3">
                <label asp-for="OldPassword" class="form-label"></label>
                <input asp-for="OldPassword" type="password" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>

            <!-- New Password -->
            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label"></label>
                <input asp-for="NewPassword" type="password" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <p class="text-success">@ViewBag.UserMessage</p>

            <!-- Change password __ Back to account -->
            <div class="mb-3">
                <input type="submit" asp-action="ChangePassword" value="Change password" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to account</a>
            </div>

        </form>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}