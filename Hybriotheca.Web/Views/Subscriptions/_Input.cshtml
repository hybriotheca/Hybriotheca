@model Hybriotheca.Web.Data.Entities.Subscription

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

@* <!-- NAME --> *@
<div class="mb-3">
    <label asp-for="Name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
    <input asp-for="Name" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type subscription name" required="" />
    <span asp-validation-for="Name" class="p-4 mb-4 text-sm font-medium text-red-800 dark:text-red-400"></span>
</div>

@* <!-- DETAILS --> *@
<div class="mb-3">
    <label asp-for="Details" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
    <input asp-for="Details" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type subscription details" required="" />
    <span asp-validation-for="Details" class="p-4 mb-4 text-sm font-medium text-red-800 dark:text-red-400"></span>
</div>

<div class="col-span-2 grid grid-cols-2 gap-4">
    @* <!-- MAX LOANS --> *@
    <div class="mb-3">
        <label asp-for="MaxLoans" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
        <input asp-for="MaxLoans" value="@(Model?.MaxLoans ?? 0)" min="0" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type maximum loan period in days" required="" />
        <span asp-validation-for="MaxLoans" class="p-4 mb-4 text-sm font-medium text-red-800 dark:text-red-400"></span>
    </div>

    @* <!-- MAX LOAN DAYS --> *@
    <div class="mb-3">
        <label asp-for="MaxLoanDays" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
        <input asp-for="MaxLoanDays" value="@(Model?.MaxLoanDays ?? 0)" min="0" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type loan limit" required="" />
        <span asp-validation-for="MaxLoanDays" class="p-4 mb-4 text-sm font-medium text-red-800 dark:text-red-400"></span>
    </div>
</div>