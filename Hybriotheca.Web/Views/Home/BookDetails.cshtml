@model Hybriotheca.Web.Data.Entities.BookEdition

@{
    ViewData["Title"] = "Model.EditionTitle";
}

<div class="p-4 grow">
    <main role="main" class="max-w-screen-xl mx-auto dark:text-white">

        <!-- MAIN CONTAINER -->
        <div class="flex gap-2 w-full">

            <!-- LEFT SIDE CONTAINER -->
            <div class="w-1/4 min-w-min">
                <!-- STICKY CONTAINER -->
                <div class="sticky top-24">
                    <!-- BOOK COVER -->
                    <div class="mx-4">
                        <img class="rounded-r-xl shadow" src="~/images/HP.jpg" alt="Eragon cover" />
                    </div>

                    <!-- ACTIONS -->
                    <div class="flex flex-col my-4">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <!-- BORROW -->
                            <button class="transition-all duration-200 ease-in-out inline-flex justify-center items-center mx-4 my-2 py-2 px-5 font-medium text-white rounded-full bg-gradient-to-br from-cyan-500 to-blue-500 hover:hue-rotate-90 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900">
                                Borrow this book
                            </button>

                            <!-- READ -->
                            <a href="../Home/EbookReader" class="transition-all duration-200 ease-in-out relative inline-flex justify-center items-center mx-4 my-2 p-0.5 overflow-hidden text-center font-medium rounded-full group bg-gradient-to-br from-cyan-500 to-blue-500 hover:hue-rotate-90 group-hover:from-cyan-500 group-hover:to-blue-500 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-900">
                                <span class="grow relative px-5 py-1.5 bg-gray-50 dark:bg-gray-900 rounded-full text-gray-900 dark:text-white">
                                    Read online
                                </span>
                            </a>
                        }
                        else
                        {
                            <!-- BORROW -->
                            <a asp-controller="Account" asp-action="Register" class="transition-all duration-200 ease-in-out inline-flex justify-center items-center mx-4 my-2 py-2 px-5 text-center font-medium text-white rounded-full bg-gradient-to-br from-cyan-500 to-blue-500 hover:hue-rotate-90 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900">
                                Borrow this book
                            </a>

                            <!-- READ -->
                            <a asp-controller="Account" asp-action="Register" class="transition-all duration-200 ease-in-out relative inline-flex justify-center items-center mx-4 my-2 p-0.5 overflow-hidden text-center font-medium rounded-full group bg-gradient-to-br from-cyan-500 to-blue-500 hover:hue-rotate-90 group-hover:from-cyan-500 group-hover:to-blue-500 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-900">
