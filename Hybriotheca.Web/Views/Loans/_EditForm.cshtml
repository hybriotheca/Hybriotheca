@model Hybriotheca.Web.Data.Entities.Loan

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="ID" type="hidden" />
    
    <div class="mb-3">
        <label class="form-label">Select library</label>
        <select asp-for="LibraryID" class="form-control" asp-items="ViewBag.Libraries">
            <option disabled selected>Select library</option>
        </select>
        <span asp-validation-for="LibraryID" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label class="form-label">Select user</label>
        <select asp-for="UserID" class="form-control" asp-items="ViewBag.Users">
            <option disabled selected>Select user</option>
        </select>
        <span asp-validation-for="UserID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Select book</label>
        <select asp-for="BookEditionID" class="form-control" asp-items="ViewBag.BookEditions">
            <option disabled selected>Select book</option>
        </select>
        <span asp-validation-for="BookEditionID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Select start date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Select end date</label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Is returned?</label>
        <select asp-for="IsReturned" class="form-control">
            <option value="false">Not returned</option>
            <option value="true">Is returned</option>
        </select>
    </div>
    
    <div class="mb-3">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>