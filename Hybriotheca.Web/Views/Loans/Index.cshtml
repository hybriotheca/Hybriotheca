@model IEnumerable<Hybriotheca.Web.Models.Entities.LoanViewModel>

@{
    ViewData["Title"] = "Loans";
    Layout = "_Layout-BACKUP";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.UserEmail)</th>
            <th>@Html.DisplayNameFor(model => model.LibraryName)</th>
            <th>@Html.DisplayNameFor(model => model.BookEditionTitle)</th>
            <th>@Html.DisplayNameFor(model => model.StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.TermLimitDate)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>Ovd</th>
            <th><!-- Hand over / Return book --></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LibraryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookEditionTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TermLimitDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @(item.IsOverdue ? "Y" : "N")
            </td>
            <td>
                @if (item.IsReserved)
                {
                    <a asp-action="HandOver" asp-route-loanId="@item.Id">Hand over</a>
                }
                else if (item.IsActive)
                {
                    <a asp-action="ReturnBook" asp-route-loanId="@item.Id">Return</a>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
