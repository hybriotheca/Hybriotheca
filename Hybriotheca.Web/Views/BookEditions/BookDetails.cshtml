        const targetEl = document.getElementById('modal-delete');
        const options = {
            backdrop: 'dynamic',
            backdropClasses: 'bg-gray-900 bg-opacity-50 fixed inset-0 z-50',
            closable: true
        }
        var modal = new Modal(targetEl, options);

        function showAlert() {
            alert("Please choose a star before submitting your review!");
        }
    </script>


    <script>
        Splide.defaults = {
            drag: 'free',
            snap: true,
            perPage: 5,
            pagination: false,
            gap: '1rem',
            padding: 70,
            paginationKeyboard: true,
            breakpoints: {
                1200: {
                    perPage: 4,
                },
                1000: {
                    perPage: 3,
                },
                640: {
                    perPage: 2,
                },
                500: {
                    perPage: 1,
                }
            }
        }

        function readMore(ratingId) {
            var reviewBody = document.getElementById(`rating-${ratingId}`);
            var readMoreBtn = document.getElementById(`read-more-${ratingId}`)

            reviewBody.classList.toggle("line-clamp-4");

            if (readMoreBtn.innerHTML == "Read more") {
                readMoreBtn.innerHTML = "Read less";
            } else {
                readMoreBtn.innerHTML = "Read more";
            }
        }

        @if (Model.OtherEditions is not null && Model.OtherEditions.Any())
        {
            <text>
            new Splide('#slider-other-editions').mount();
            </text>
        }
        
        new Splide('#slider-recommendations').mount();

        @if (Model.OtherBooksBySameAuthor is not null && Model.OtherBooksBySameAuthor.Any())
        {
            <text>
                new Splide('#slider-same-author').mount();
            </text>
        }
        
    </script>
}